<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CAE4F8"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_tokoh"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/adele"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textDataDiri"
        android:layout_width="match_parent"
        android:text="Biodata Diri"
        android:textSize="20sp"
        android:layout_marginTop="1dp"
        android:drawablePadding="5dp"
        android:textAlignment="center"
        android:padding="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nama :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtnama"
            android:textColor="#0A0B0A"
            android:text="Adele"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="TempatLahir:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txttmptlahir"
            android:textColor="#0A0B0A"
            android:text="Ilsan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="TanggalLahir :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txttgllahir"
            android:textColor="#0A0B0A"
            android:text="1 Januari 1993"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Motto :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtmotto"
            android:textColor="#0A0B0A"
            android:text="183"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnClose"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>